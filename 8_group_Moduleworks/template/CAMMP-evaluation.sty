\newcommand{\barchart}[5]{%
	\begin{tikzpicture}
		\begin{axis}[width={#1}, height=6cm, ybar, ymajorgrids, xtick=data,
			legend style={at={(0.5,1.2)}, anchor=north,legend columns=-1},
			enlargelimits=false, enlarge x limits={rel=0.2}, ymin=0, enlarge y limits={rel=0.1, upper},
			ylabel={#2}, symbolic x coords={a,b,c,d,e,f,g,h,i,j}, xticklabels={#3}, bar width={#1/3/#4}]
				#5
		\end{axis}
	\end{tikzpicture}
}

\newcommand{\barchartStacked}[6]{%
	\begin{tikzpicture}
		\begin{axis}[width={#1}, height=6cm, ybar stacked, ymajorgrids, xtick=data, xticklabel style={yshift=-1.5mm},
			legend style={at={(0.5,1.2)}, anchor=north,legend columns=-1},
			enlargelimits=false, enlarge x limits={rel=0.3}, ymin=0, enlarge y limits={rel=0.1, upper},
			ylabel={#2}, symbolic x coords={a,b,c,d,e,f,g,h,i,j}, xticklabels={#3}, bar width={#1/3/#4},
			title={\ifstrempty{#5}{}{\fbox{#5}}}]
				#6
		\end{axis}
	\end{tikzpicture}
}

\newcommand{\drawText}[3]{%
	\ifstrempty{#3}{}{{\bf #1\enspace(Jgst.: #2):} \parbox[t]{{\textwidth}-3cm}{#3.}\par}
